<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eslah" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#237ccc</item>
        <item name="colorSecondaryVariant">#237ccc</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>

    </style>
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
    </style>
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#A5A5A5</item>
    </style>
    <style name="TextAppearance.Design.Tab" parent="TextAppearance.Design.Tab" tools:ignore="ResourceCycle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>